{
  "name": "static",
  "description": "Static content for nextstrain.org",
  "version": "1.0.1",
  "author": "james hadfield",
  "keywords": [
    "nextstrain",
    "bioinformatics",
    "phylodynamics"
  ],
  "license": "MIT",
  "main": "n/a",
  "engines": {
    "node": "^16",
    "npm": "^7 || ^8"
  },
  "scripts": {
    "develop": "gatsby develop",
    "dev": "gatsby develop",
    "start": "gatsby develop",
    "serve": "gatsby serve",
    "build": "gatsby build",
    "test": "gatsby build",
    "build:pp": "gatsby build --prefix-paths",
    "build:gh": "npm run clean && npm run build:pp && gh-pages -d public",
    "clean": "rm -rf public",
    "lint:md": "remark content/posts/",
